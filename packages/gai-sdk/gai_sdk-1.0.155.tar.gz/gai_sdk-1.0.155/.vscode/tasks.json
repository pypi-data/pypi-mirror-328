        {
            "label": "Pypi: [gai-sdk] publish",
            "type": "shell",
            "command": "/bin/bash",
            "args": [
                "-c",
                "source ${userHome}/.venv/bin/activate && gai publish sdk ${workspaceFolder}"
            ],
            "problemMatcher": []
        },
        {
            "label": "Task: install",
            "type": "shell",
            "command": "/bin/bash",
            "args": [
                "-c",
                "python ${workspaceFolder}/.vscode/install.py"
            ],
            "problemMatcher": []
        },
        {
            "label": "Task: docker-compose-up",
            "type": "shell",
            "command": "/bin/bash",

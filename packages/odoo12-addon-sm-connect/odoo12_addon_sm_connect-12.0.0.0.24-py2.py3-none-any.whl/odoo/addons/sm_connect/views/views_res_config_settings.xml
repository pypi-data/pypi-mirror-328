<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="connect_res_config_settings_view_form" model="ir.ui.view">
    <field name="name">connect.res.config.settings.view.form.inherit.base.setup</field>
    <field name="model">res.config.settings</field>
    <field name="priority" eval="100"/>
    <field name="inherit_id" ref="base.res_config_settings_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//div[hasclass('settings')]" position="inside">
        <div class="app_settings_block" data-string="CS Connect" string="CS Connect" data-key="cs_connect">
          <div class="sm_connect">
            <h2>Carsharing API Credentials</h2>
            <div class="row mt16 o_settings_container">
              <group>
                <field name="sm_carsharing_api_credentials_api_key"/>
                <field name="sm_carsharing_api_credentials_cs_url"/>
                <field name="sm_carsharing_api_credentials_admin_group"/>
              </group>
            </div>
            <h2>Wordpress DB Credentials</h2>
            <div class="row mt16 o_settings_container">
              <group>
                <field name="sm_wordpress_db_credentials_admin_host"/>
                <field name="sm_wordpress_db_credentials_admin_username"/>
                <field name="sm_wordpress_db_credentials_admin_password"/>
                <field name="sm_wordpress_db_credentials_db_host"/>
                <field name="sm_wordpress_db_credentials_db_username"/>
                <field name="sm_wordpress_db_credentials_db_password"/>
                <field name="sm_wordpress_db_credentials_db_database"/>
              </group>
            </div>
            <h2>Firebase Auth Credentials</h2>
            <div class="row mt16 o_settings_container">
              <group>
                <field name="sm_firebase_auth_type"/>
                <field name="sm_firebase_auth_project_id"/>
                <field name="sm_firebase_auth_private_key_id"/>
                <field name="sm_firebase_auth_private_key"/>
                <field name="sm_firebase_auth_client_email"/>
                <field name="sm_firebase_auth_client_id"/>
                <field name="sm_firebase_auth_auth_uri"/>
                <field name="sm_firebase_auth_token_uri"/>
                <field name="sm_firebase_auth_provider_x509"/>
                <field name="sm_firebase_auth_client_x509"/>
                <field name="sm_firebase_auth_db_ref"/>
              </group>
            </div>
            <h2>Fleetio API Credentials</h2>
            <div class="row mt16 o_settings_container">
              <group>
                <field name="sm_fleetio_api_token"/>
                <field name="sm_fleetio_account_token"/>
                <field name="sm_fleetio_test_mode"/>
                <button name="test_fleetio_connection" type="object" string="Test Connection"
                        attrs="{'invisible': ['|', ('sm_fleetio_api_token','=',False), ('sm_fleetio_account_token','=',False)]}"/>
              </group>
            </div>
          </div>
        </div>
      </xpath>
    </field>
  </record>
</odoo>
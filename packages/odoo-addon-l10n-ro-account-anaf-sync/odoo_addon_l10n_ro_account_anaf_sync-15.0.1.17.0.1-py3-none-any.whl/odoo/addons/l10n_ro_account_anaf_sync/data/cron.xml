<?xml version="1.0" ?>
<odoo>
    <record model="ir.cron" id="ir_cron_auto_update_access_token">
        <field name="name">ANAF Access token auto update</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="state">code</field>
        <field
            name="nextcall"
            eval="(DateTime.now() + relativedelta(days=1)).strftime('%Y-%m-%d 00:02:00')"
        />
        <field name="doall" eval="False" />
        <field
            name="model_id"
            ref="l10n_ro_account_anaf_sync.model_l10n_ro_account_anaf_sync"
        />
        <field name="code">model.action_auto_refresh_access_token()</field>
    </record>
</odoo>

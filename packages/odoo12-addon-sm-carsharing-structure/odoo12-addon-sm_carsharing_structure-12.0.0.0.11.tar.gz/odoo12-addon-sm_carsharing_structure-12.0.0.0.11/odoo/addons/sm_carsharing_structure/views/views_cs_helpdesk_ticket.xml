<odoo>
    <record id="view_cs_ticket_form" model="ir.ui.view">
        <field name="name">view.cs.ticket.form</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk_mgmt.ticket_view_form"/>
        <field name="arch" type="xml">
            <header>
                <button name="ticket_service_wizard" type="object" string="Crear Servei" attrs="{'invisible': [('cs_ticket_type', '!=', 'car')]}" />
            </header>
            <xpath expr="//notebook/page[@name='other_info']" position="after">
                <page name="carsharing" string="Carsharing">
                    <group col='2'>
                        <field name="cs_ticket_type" attrs="{'required':True}" />
                        <field name="cs_car_id" options="{'no_quick_create':True,'no_create_edit':True}" attrs="{'invisible': [('cs_ticket_type', '!=', 'car')]}" />
                        <field name="cs_carconfig_id" options="{'no_quick_create':True,'no_create_edit':True}" attrs="{'invisible': [('cs_ticket_type', '!=', 'carconfig')]}" />
                        <field name="cs_pu_id" options="{'no_quick_create':True,'no_create_edit':True}" attrs="{'invisible': [('cs_ticket_type', '!=', 'pu')]}" />
                        <field name="cs_community_id" options="{'no_quick_create':True,'no_create_edit':True}" attrs="{'invisible': [('cs_ticket_type', '!=', 'community')]}" />
                        <field name="related_service_ids" widget="many2many_list" attrs="{'invisible': [('cs_ticket_type', '!=', 'car')]}">
                           <tree string="Service" create="true" edit="false" delete="false" open="true">    
                             <field name="date" />
                             <field name="vehicle_id" />
                             <field name="cost_subtype_id"/>
                             <field name="related_member_id" />
                             <field name="amount" sum="Total"/>
                           </tree>
                         </field>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>

<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="PayrollImportAccountMoveView.import_wizard_button">
        <button 
            t-if="widget and widget.modelName == 'account.move'"
            type="button"
            class="btn btn-secondary o_button_import_payroll"
        >
            Import Payroll
        </button>
    </t>
    <t t-extend="ListView.buttons">
        <t t-jquery="button.o_list_button_add" t-operation="after">
            <t t-call="PayrollImportAccountMoveView.import_wizard_button"/>
         </t>
    </t>
</templates>
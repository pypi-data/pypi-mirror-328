<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- PDF REPORTS : paperformat -->
    <record id="account_analytic_report_qweb_paperformat" model="report.paperformat">
        <field name="name">Account Analytic Report QWeb Paperformat</field>
        <field name="default" eval="True" />
        <field name="format">custom</field>
        <field name="page_height">297</field>
        <field name="page_width">210</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">12</field>
        <field name="margin_bottom">8</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">10</field>
        <field name="dpi">110</field>
    </record>

    <!-- PDF/HMTL REPORTS -->
    <!-- Analytic Multilevel Report -->
    <record id="action_report_analytic_multilevel_qweb" model="ir.actions.report">
        <field name="name">Account Analytic Multilevel Report</field>
        <field name="model">analytic.multilevel.report.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">account_analytic_report.analytic_multilevel</field>
        <field name="report_file">account_analytic_report.analytic_multilevel</field>
        <field name="paperformat_id" ref="account_analytic_report_qweb_paperformat" />
    </record>
    <record id="action_report_analytic_multilevel_html" model="ir.actions.report">
        <field name="name">Account Analytic Multilevel Report</field>
        <field name="model">analytic.multilevel.report.wizard</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">account_analytic_report.analytic_multilevel</field>
        <field name="report_file">account_analytic_report.analytic_multilevel</field>
    </record>

    <!-- XLSX REPORTS -->
    <!-- Analytic Plan -->
    <record id="action_report_analytic_multilevel_xlsx" model="ir.actions.report">
        <field name="name">Account Analytic Multilevel Report XLSX</field>
        <field name="model">analytic.multilevel.report.wizard</field>
        <field name="type">ir.actions.report</field>
        <field name="report_name">a_a_r.report_analytic_multilevel_xlsx</field>
        <field name="report_type">xlsx</field>
        <field name="report_file">report_analytic_multilevel</field>
    </record>
</odoo>
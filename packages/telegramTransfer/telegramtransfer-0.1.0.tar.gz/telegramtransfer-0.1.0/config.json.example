{
    "api": {
        "id": null,
        "hash": "your_api_hash",
        "comment": "从 https://my.telegram.org 获取的API凭据"
    },
    "session": {
        "dir": "./telegramTransfer/sessions",
        "name": "default",
        "comment": "会话配置：dir为会话文件存储目录（对应SESSION_DIR），name为默认会话名称（对应SESSION_NAME）"
    },
    "transfer": {
        "chunk_size": 2097152,
        "retry_times": 3,
        "timeout": 300,
        "comment": "文件传输相关配置，chunk_size为分片大小(字节)，retry_times为重试次数，timeout为超时时间(秒)"
    },
    "logging": {
        "level": "INFO",
        "comment": "日志级别配置，可选值：DEBUG, INFO, WARNING, ERROR, CRITICAL"
    },
    "state": {
        "file": "./transfer_state.json",
        "comment": "传输状态文件保存路径，用于记录文件传输进度和状态"
    },
    "filters": {
        "exclude": [
            ".DS_Store",
            "Thumbs.db",
            ".git/",
            "__pycache__/",
            "*.pyc",
            ".*.swp",
            ".env"
        ],
        "include": ["*"],
        "comment": "文件过滤规则，exclude为要排除的文件模式，include为要包含的文件模式，支持通配符"
    }
}
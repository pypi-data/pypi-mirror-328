# Telegram API凭据
[api]
id = ""  # 从 https://my.telegram.org 获取
hash = ""

# 会话配置
[session]
dir = "./telegramTransfer/sessions"  # 会话文件存储目录
name = "default"  # 默认会话名称

# 文件传输相关配置
[transfer]
chunk_size = 2097152  # 分片大小(字节)
retry_times = 3  # 重试次数
timeout = 300  # 超时时间(秒)

# 日志配置
[logging]
level = "INFO"  # 可选值：DEBUG, INFO, WARNING, ERROR, CRITICAL

# 状态文件配置
[state]
file = "./transfer_state.json"  # 传输状态文件保存路径

# 文件过滤规则
[filters]
exclude = [
    ".DS_Store",
    "Thumbs.db",
    ".git/",
    "__pycache__/",
    "*.pyc",
    ".*.swp",
    ".env"
]
include = ["*"]